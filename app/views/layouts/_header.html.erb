<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="logo"><%= link_to image_tag("/assets/logo.jpg"), root_path%></div>
    </div>
    <div class="col-lg-3 pull-right header_login">
      <div class="row">
        <% if user_signed_in? %>
          <div class="col-lg-6">
            <%= link_to "Upload",new_photo_path, :class => "btn btn-lg btn-success col-lg-12 pull-right"%>
          </div>
          <div class="col-lg-6">
            <%= link_to "Sign Out",destroy_user_session_path, method: :delete, :class => "btn btn-lg btn-success col-lg-12 pull-right"%>
          </div>
        <% else %>
          <div class="col-lg-6">
            <%= link_to "Sign In",new_user_session_path, :class => "btn btn-lg btn-success col-lg-12 pull-left" %>
          </div>
          <div class="col-lg-6">
            <%= link_to "Sign Up",new_user_registration_path, :class => "btn btn-lg btn-success col-lg-12 pull-right"%>
          </div>
          <div class="col-lg-11 header_login" style="margin-left:10px;">
            <%= link_to "Upload (Members only)",new_user_registration_path, :class => "btn btn-lg btn-success col-lg-12 pull-right"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
